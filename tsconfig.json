{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,

    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "declaration": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true
  },
  "include": [
    "engines/*/bin/**/*",
    "engines/*/lib/**/*",
    "packages/*/bin/**/*",
    "packages/*/lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*"
  ]
}
